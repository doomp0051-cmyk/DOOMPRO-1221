        let currentRating = 0;
        let currentProjectId = null;

        // Open project modal
        function openProjectModal(projectId) {
            const project = projects[projectId];
            if (!project) return;
            
            currentProjectId = projectId;
            projectTitle.textContent = project.title;
            projectDescription.textContent = project.description;
            
            // Clear previous images
            projectImages.innerHTML = '';
            
            // Add project images
            project.images.forEach(imageSrc => {
                const img = document.createElement('img');
                img.src = imageSrc;
                img.alt = project.title;
                img.addEventListener('click', function() {
                    // Zoom functionality could be added here
                });
                projectImages.appendChild(img);
            });
            
            // Load comments
            loadComments(project.comments);
            
            // Show modal
            modal.style.display = 'block';
            setTimeout(() => {
                modalContent.classList.add('active');
            }, 10);
            
            // Reset form
            commentInput.value = '';
            currentRating = 0;
            updateStars();
        }
        
        // Load comments into the modal
        function loadComments(comments) {
            commentsList.innerHTML = '';
            
            if (comments.length === 0) {
                const noComments = document.createElement('p');
                noComments.textContent = 'No comments yet. Be the first to review!';
                commentsList.appendChild(noComments);
                return;
            }
            
            comments.forEach(comment => {
                const commentElement = document.createElement('div');
                commentElement.className = 'comment';
                
                const stars = '★'.repeat(comment.rating) + '☆'.repeat(5 - comment.rating);
                
                commentElement.innerHTML = `
                    <div class="comment-header">
                        <span class="comment-author">${comment.author}</span>
                        <span class="comment-date">${comment.date}</span>
                    </div>
                    <div class="comment-rating">${stars}</div>
                    <p class="comment-text">${comment.text}</p>
                    <button class="like-button">
                        <i class="fas fa-thumbs-up"></i>
                        <span class="like-count">${comment.likes}</span>
                    </button>
                `;
                
                commentsList.appendChild(commentElement);
            });
            
            // Add event listeners to like buttons
            document.querySelectorAll('.like-button').forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.toggle('liked');
                    const likeCount = this.querySelector('.like-count');
                    if (this.classList.contains('liked')) {
                        likeCount.textContent = parseInt(likeCount.textContent) + 1;
                    } else {
                        likeCount.textContent = parseInt(likeCount.textContent) - 1;
                    }
                });
            });
        }
        
        // Update star rating display
        function updateStars() {
            stars.forEach((star, index) => {
                if (index < currentRating) {
                    star.textContent = '★';
                    star.classList.add('active');
                } else {
                    star.textContent = '☆';
                    star.classList.remove('active');
                }
            });
        }
        
        // Close modal
        function closeProjectModal() {
            modalContent.classList.remove('active');
            setTimeout(() => {
                modal.style.display = 'none';
            }, 300);
        }
        
        // Event listeners
        closeModal.addEventListener('click', closeProjectModal);
        
        // Close modal when clicking outside content
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeProjectModal();
            }
        });
        
        // Star rating interaction
        stars.forEach(star => {
            star.addEventListener('click', function() {
                currentRating = parseInt(this.getAttribute('data-rating'));
                updateStars();
            });
            
            star.addEventListener('mouseover', function() {
                const hoverRating = parseInt(this.getAttribute('data-rating'));
                stars.forEach((s, index) => {
                    if (index < hoverRating) {
                        s.textContent = '★';
                    } else {
                        s.textContent = '☆';
                    }
                });
            });
            
            star.addEventListener('mouseout', function() {
                updateStars();
            });
        });
        
        // Submit comment
        commentSubmit.addEventListener('click', function() {
            const commentText = commentInput.value.trim();
            if (commentText === '') return;
            
            // In a real app, you would send this to a server
            const newComment = {
                author: "You",
                date: new Date().toISOString().split('T')[0],
                rating: currentRating,
                text: commentText,
                likes: 0
            };
            
            // Add to project data
            if (!projects[currentProjectId].comments) {
                projects[currentProjectId].comments = [];
            }
            projects[currentProjectId].comments.unshift(newComment);
            
            // Reload comments
            loadComments(projects[currentProjectId].comments);
            
            // Reset form
            commentInput.value = '';
            currentRating = 0;
            updateStars();
        });

        // Scroll reveal animation
        document.addEventListener('DOMContentLoaded', function() {
            // Animate elements when they come into view
            const animateOnScroll = function() {
                const elements = document.querySelectorAll('.about-img, .about-text p, .service-box, .portfolio-box, .project-item');
                
                elements.forEach(element => {
                    const elementPosition = element.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.3;
                    
                    if (elementPosition < screenPosition) {
                        element.style.opacity = '1';
                        if (element.classList.contains('service-box')) {
                            element.style.transform = 'rotateY(20deg)';
                        } else if (element.classList.contains('portfolio-box') || element.classList.contains('project-item')) {
                            element.style.transform = 'scale(0.95)';
                        } else {
                            element.style.transform = 'translateY(0)';
                        }
                    }
                });
            };
            
            // Set initial state for animated elements
            const animatedElements = document.querySelectorAll('.about-img, .about-text p, .service-box, .portfolio-box, .project-item');
            animatedElements.forEach(element => {
                element.style.opacity = '0';
                if (element.classList.contains('service-box')) {
                    element.style.transform = 'rotateY(90deg)';
                } else if (element.classList.contains('portfolio-box') || element.classList.contains('project-item')) {
                    element.style.transform = 'scale(0.8)';
                } else {
                    element.style.transform = 'translateY(30px)';
                }
                element.style.transition = 'all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            });
            
            // Run on load and scroll
            animateOnScroll();
            window.addEventListener('scroll', animateOnScroll);
            
            // Smooth scrolling for navigation links
            document.querySelectorAll('nav a').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    
                    // Toggle projects page visibility
                    if (targetId === '#projects') {
                        document.querySelector('.projects-page').style.display = 'block';
                        document.querySelector('.portfolio').style.display = 'none';
                        window.scrollTo({
                            top: document.querySelector('.projects-page').offsetTop - 70,
                            behavior: 'smooth'
                        });
                    } else if (targetId === '#portfolio') {
                        document.querySelector('.projects-page').style.display = 'none';
                        document.querySelector('.portfolio').style.display = 'block';
                        window.scrollTo({
                            top: document.querySelector('.portfolio').offsetTop - 70,
                            behavior: 'smooth'
                        });
                    } else {
                        document.querySelector('.projects-page').style.display = 'none';
                        document.querySelector('.portfolio').style.display = 'block';
                        window.scrollTo({
                            top: targetElement.offsetTop - 70,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Floating animation for hero image
            const heroImg = document.querySelector('.hero-img');
            function floatAnimation() {
                heroImg.style.transform = 'translateY(-20px) rotate(2deg)';
                setTimeout(() => {
                    heroImg.style.transform = 'translateY(0) rotate(-2deg)';
                    setTimeout(floatAnimation, 3000);
                }, 3000);
            }
            floatAnimation();
            
            // Rotate service boxes on hover
            document.querySelectorAll('.service-box').forEach(box => {
                box.addEventListener('mouseenter', function() {
                    this.style.transform = 'rotateY(0deg) translateY(-10px)';
                });
                
                box.addEventListener('mouseleave', function() {
                    this.style.transform = 'rotateY(20deg)';
                });
            });

            // Glow effect for portfolio items
            document.querySelectorAll('.portfolio-box, .project-item').forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 0 30px rgba(255, 77, 77, 0.6)';
                });
                
                item.addEventListener('mouseleave', function() {
                    this.style.boxShadow = '0 0 30px rgba(255, 77, 77, 0.4)';
                });
            });

            // Open project modal when clicking on portfolio or project items
            document.querySelectorAll('.portfolio-box, .project-item').forEach(item => {
                item.addEventListener('click', function() {
                    const projectId = this.getAttribute('data-project');
                    openProjectModal(projectId);
                });
            });

            // Enable Enter key to submit comments
            commentInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    commentSubmit.click();
                }
            });
        });
    </script>
</body>
</html>
